apiVersion: v1
kind: ConfigMap
metadata:
  name: blockkube-x-config
  namespace: default
  labels:
    app: blockkube-x
data:
  NEXT_PUBLIC_ETH_NODE_URL: "<%= config.explorer.explorerNode %>--jsonrpc:<%= config.explorer.explorerHTTPPort %>"
  MONGODB_URI: "mongodb://mongodb-svc/block-kube-x"
  INDEX_PAST_BLOCKS: "false"
---
apiVersion: v1
kind: Service
metadata:
  name: blockkube-x-svc
  namespace: default
  labels:
    app: blockkube-x
spec:
  selector:
    app: blockkube-x
  type: LoadBalancer
  ports:
    - protocol: TCP
      port: 3000
      targetPort: 3000
---
apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: default
  name: blockkube-x
  labels:
    app: blockkube-x
spec:
  replicas: 1
  selector:
    matchLabels:
      app: blockkube-x
  template:
    metadata:
      labels:
        app: blockkube-x
    spec:
      containers:
      - name: blockkube-x
        image: vxmkz/blockkube-x:latest
        ports:
        - containerPort: 3000
        envFrom:
        - configMapRef:
            name: blockkube-x-config